      { url: "https://s34.picofile.com/file/8487872192/photo21791172223.jpg", caption: "ÛŒØ§Ø¯Ú¯Ø§Ø± Ø®ÙˆÙ†ÛŒÙ† ØºÛŒØ±Øª" },
      { url: "https://s34.picofile.com/file/8487872200/photo21791172604.jpg", caption: "Ø³Ú©ÙˆØªÛŒ Ù¾Ø± Ø§Ø² ÙØ±ÛŒØ§Ø¯" },
